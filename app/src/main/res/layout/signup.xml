<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textColor="#088A29"
            android:textSize="33sp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Please register to continue using our app."
            android:textSize="19sp"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Enter via Social Networks"
            android:textStyle="bold"
            android:textColor="#088A29"
            android:textSize="19sp"
            android:layout_marginLeft="30dp"
            android:gravity="center"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:orientation="vertical">
        <Button
            android:layout_marginLeft="30dp"
            android:paddingLeft="20dp"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/fb"
            android:text="Login With Facebook"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"

            />
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:paddingLeft="20dp"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:drawableLeft="@drawable/twitter"
            android:text="Login With Twitter"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"

            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <EditText
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:hint="User"
            android:inputType="textEmailAddress">

        </EditText>
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:hint="Pass"
            android:inputType="textPassword"
            >

        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <CheckBox
            android:layout_marginLeft="30dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            />
        <TextView
            android:layout_marginLeft="10dp"

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="I agree with privacy polily"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#088A29"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/btsignup"
            android:layout_marginLeft="30dp"
            android:layout_width="340dp"
            android:layout_height="60dp"

            android:text="Sign up"
            android:background="@drawable/button"
            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="You already have an account?"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Login"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#088A29"/>

    </LinearLayout>


</LinearLayout>